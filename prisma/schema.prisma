generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prontuario {
  id               Int       @id @default(autoincrement())
  nome             String
  cpfTutor         String
  data_nascimento  DateTime
  porteFisico      String
  sexo             String
  doencas          String
  vacinas          String
  tutor            String
  endereco         String
  telefone         String
  raca             String
  email            String
  data_cadastro    DateTime  @default(now())
  data_atualizacao DateTime  @updatedAt
  data_exclusao    DateTime?
}
