generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Prontuario {
  id               Int       @id @default(autoincrement())
  nome             String
  cpf              String
  data_nascimento  DateTime
  sexo             String
  telefone         String
  email            String
  endereco         String
  cidade           String
  estado           String
  cep              String
  profissao        String
  estado_civil     String
  escolaridade     String
  data_cadastro    DateTime
  data_atualizacao DateTime
  data_exclusao    DateTime?
}
